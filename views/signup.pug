extends layout

block content
    div.min-vh-100.d-flex.flex-column.align-items-center.justify-content-center
        div.col-11.col-sm-10.col-md-8.col-lg-6.mb-5
            h1.text-center.mb-5 Sign up to Only Members!
            form(method="POST" actions="")
                div.form-group.mb-3
                    label.form-label(for="signupName") #[strong Name]
                    input.form-control(type="text" id="signupName" name="signupName")
                div.form-group.mb-3
                    label.form-label(for="signupEmail") #[strong Email address] 
                    input.form-control(type="email" id="signupEmail" name="signupEmail")
                div.form-group.mb-3
                    label.form-label(for="signupPassword") #[strong Password] 
                    input.form-control(type="password" id="signupPassword" name="signupPassword")
                div.form-group.mb-3
                    label.form-label(for="signupConfirmPassword") #[strong Confirm Password] 
                    input.form-control(type="password" id="signupConfirmPassword" name="signupConfirmPassword")
                div.d-grid.col
                    button.btn.btn-primary(type="submit") Sign Up
            
        a.btn.btn-success.px-4.py-2.mt-5(role="button" href="/") Back to Main Menu

    if errors 
        h1 It works
        ul 
            for error in errors 
                li != error.msg