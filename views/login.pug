extends layout

block content
    div.min-vh-100.d-flex.flex-column.align-items-center.justify-content-center
        div.col-11.col-sm-10.col-md-8.col-lg-6.mb-5
            h1.text-center.mb-5 Log in to OnlyMembers!
            form(method="POST" actions="")
                div.form-group.mb-3
                    label.form-label(for="email") #[strong Email address] 
                    input.form-control(type="email" id="email" name="email" value=formData.email)

                    if errors && errors.length > 0
                        each error in errors
                            if error.path === "email"
                                div.alert.alert-danger.mt-1=error.msg

                div.form-group.mb-3
                    label.form-label(for="password") #[strong Password] 
                    input.form-control(type="password" id="password" name="password" value=formData.password)

                    if errors && errors.length > 0
                        each error in errors
                            if error.path === "password"
                                div.alert.alert-danger.mt-1=error.msg

                div.d-grid.col
                    button.btn.btn-primary(type="submit") Log In   

            if message 
                div.alert.alert-danger.mt-3
                    div=message


        a.btn.btn-success.px-4.py-2.mt-5(role="button" href="/") Back to Main Menu

